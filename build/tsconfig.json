{
    "ts-node": {
        "transpileOnly": true,
        "esm": true,
        "require": ["tsconfig-paths/register"]
    },
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "allowJs": true,
        "checkJs": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "declaration": true,
        "strict": false,
        "outDir": "dist",
        "baseUrl": "./",
        "paths": {
            "~/*": ["src/*"]
        }
    },
    "include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.js", "src/**/*.svelte"]
}
