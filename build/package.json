{
    "name": "@ninjalib/build",
    "version": "0.0.1",
    "description": "Build package",
    "type": "module",
    "exports": {
        ".": {
            "default": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "rmdir /s /q dist & tsc & tsc-alias",
        "build-cli": "npm run build & npm link",
        "test": "npm run build & node --experimental-specifier-resolution=node --loader ./loader.js --test-reporter=spec --test ./dist/test",
        "node-runtime": "ninja-cli node",
        "ninja-cli": "node --experimental-specifier-resolution=node --loader=./cli/node/loader.js ./dist/cli/cli.js"
    },
    "keywords": [],
    "author": "Leon Michalak",
    "license": "ISC",
    "devDependencies": {
        "@types/node": "^18.14.5",
        "ts-node": "^10.9.1",
        "tsc-alias": "^1.8.2",
        "tsconfig-paths": "^3.14.2",
        "typescript": "^4.9.5"
    },
    "bin": {
        "ninja-cli": "./dist/cli/cli.js --loader=./cli/node/loader.js --experimental-specifier-resolution=node"
    }
}
