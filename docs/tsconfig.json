{
    "extends": "./tsconfig.node.json",
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": false,
        "baseUrl": "./src",
        "paths": {
            "~/*": ["./*"]
        }
    },
    "include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.js", "src/**/*.svelte"],
    "references": [{ "path": "./tsconfig.node.json" }]
}
